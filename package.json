{
  "name": "kudos-machine",
  "version": "1.0.0",
  "description": "Automatically give kudos to Strava club members' activities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "start:web": "SKIP_MOBILE=true tsc && node dist/index.js",
    "start:mobile": "MOBILE_ONLY=true tsc && node dist/index.js"
  },
  "keywords": ["strava", "kudos", "automation"],
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
